# 使用你原有镜像作为基础镜像
FROM ghcr.dockerproxy.com/parkervcp/games:valheim

# 安装 tzdata 软件包
RUN apt-get update && \
    apt-get install -y tzdata && \
    apt-get clean

# 设置时区为"Asia/Shanghai"
RUN ln -fs /usr/share/zoneinfo/Asia/Shanghai /etc/localtime

# 设置环境变量 LANG 为 UTF-8
ENV LANG C.UTF-8

# 保留原有镜像的启动命令
CMD ["/entrypoint.sh"]
